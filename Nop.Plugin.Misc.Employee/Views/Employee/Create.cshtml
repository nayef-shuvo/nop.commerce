@model EmployeeModel

@{
    ViewBag.PageTitle = T(EmployeeManagementDefaults.ADMIN_CATALOG_EMPLOYEES_ADD_NEW).Text;
    NopHtml.SetActiveMenuItemSystemName("Employees");
}


<form asp-controller="Employee" asp-action="Create" method="post" id="employee-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T(EmployeeManagementDefaults.ADMIN_CATALOG_EMPLOYEES_ADD_NEW)
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T(EmployeeManagementDefaults.ADMIN_CATALOG_EMPLOYEES_BACK_TO_LIST)</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>